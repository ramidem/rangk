{
  "name": "rangk",
  "private": true,
  "main": "index.ts",
  "workspaces": [
    "client",
    "common",
    "server"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2"
  },
  "scripts": {
    "lint:server": "npm --prefix server run typecheck",
    "postinstall": "lerna bootstrap",
    "prepare": "husky install",
    "test:server": "npm --prefix server run test"
  },
  "dependencies": {
    "husky": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:server && npm run test:server"
    }
  }
}
